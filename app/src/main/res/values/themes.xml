<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaPhotoViewerSD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?themeBaseColor</item>
        <item name="colorPrimaryVariant">?themeBaseColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?themeSecondaryColor</item>
        <item name="colorSecondaryVariant">?themeSecondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Choice</item>
    </style>


    <style name="MyRedTheme" parent="Theme.NasaPhotoViewerSD">
        <item name="themeBaseColor">@color/dark_red</item>
        <item name="themeSecondaryColor">@color/red</item>
    </style>

    <style name="MyGreenTheme" parent="Theme.NasaPhotoViewerSD">
        <item name="themeBaseColor">@color/dark_green</item>
        <item name="themeSecondaryColor">@color/green</item>
    </style>

    <style name="MyBlueTheme" parent="Theme.NasaPhotoViewerSD">
        <item name="themeBaseColor">@color/dark_blue</item>
        <item name="themeSecondaryColor">@color/blue</item>
    </style>

    
</resources>